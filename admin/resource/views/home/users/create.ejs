<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-11 mx-auto mt-2">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"><%= translate(req,__filename,'title','Create new User') %></h3>
                        </div>
                        <form class="form-horizontal" method="POST" action="/users" novalidate>
                            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
                            <div class="card-body">
                                <div class="form-row align-items-center">
                                    <div class="form-group col-md-5 mx-auto">
                                        <input id="email" type="email" class="form-control <%= isValid('email') %>"
                                               name="email"
                                               placeholder="<%= translate(req,__filename,'user-email-ph','Insert Email') %>"
                                               value="<%= getInputValue("email") %>">
                                        <div class="invalid-feedback">
                                            <%= showError('email') %>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-5 mx-auto">
                                        <input id="password" type="password"
                                               class="form-control <%= isValid('password') %>"
                                               placeholder="<%= translate(req,__filename,'user-password-ph','Insert Password') %>"
                                               name="password" required="">
                                        <div class="invalid-feedback">
                                            <%= showError('password') %>
                                        </div>
                                    </div>
                                    <div class="form-group  mx-auto">
                                        <button type="submit"
                                                class="btn btn-primary"><%= translate(req,__filename,'user-create','Create User') %></button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
