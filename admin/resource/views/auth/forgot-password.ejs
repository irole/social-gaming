<link rel="stylesheet" href="/css/style.css">
<div class="card">
    <form action="/auth/password/forgot" method="post" novalidate>

        <img class="center" src="/images/iRole.png" width="100%" height="75px">
        <p class="or"></p>
        <h2 class="title"> <%= translate(req,__filename,'page-title','Forgot Password') %></h2>
        <p class="or"></p>
        <%- include(viewPath('layouts/error-messages')) -%>
        <div class="email-login">
            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
            <label for="email"> <b><%= translate(req,__filename,'email','Email') %></b></label>
            <input type="text" class="<%= isValid('email') %>"
                   placeholder="<%= translate(req,__filename,'enter-email','Enter Email') %>" name="email"
                   value="<%= getInputValue("email") %>">
            <span class="error"><%= showError('email') %></span>
        </div>
        <input type="submit" class="cta-btn" value="<%= translate(req,__filename,'submit','Send Link') %>">
    </form>
</div>
