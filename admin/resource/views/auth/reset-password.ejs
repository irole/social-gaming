<link rel="stylesheet" href="/css/style.css">
<div class="card">
    <form action="/auth/password/reset" method="post" novalidate>

        <img class="center" src="/images/iRole.png" width="100%" height="75px">
        <p class="or"></p>
        <h2 class="title"> <%= translate(req,__filename,'page-title','Reset Password') %></h2>
        <p class="or"><span>or</span></p>
        <%- include(viewPath('layouts/error-messages')) -%>
        <div class="email-login">
            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
            <input type="hidden" name="token" value="<%= token%>">
            <label for="psw"><b>Password</b></label>
            <input type="password" class="<%= isValid('password') %>" placeholder="Enter Password"
                   name="password" <%= getInputValue("password") %>>
            <span class="error"><%= showError('password') %></span>
        </div>
        <input type="submit" class="cta-btn" value="submit">
    </form>
</div>
